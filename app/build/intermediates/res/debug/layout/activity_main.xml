<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" 
    android:orientation="vertical"
    android:background="@drawable/whitefabric"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/headingpp"
        android:layout_marginTop="10dp"/>
<LinearLayout
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    android:layout_marginLeft="32dp"
    android:layout_marginTop="30dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:text="@string/username"
            android:textColor="#ff25475a"
            android:textSize="16dp"
            android:textStyle="bold"/>
        <EditText android:id="@+id/userName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:singleLine="true"
            android:hint="@string/username"

            />


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:text="@string/email"
            android:textColor="#ff25475a"
            android:textSize="16dp"
            android:textStyle="bold"
            />

        <EditText android:id="@+id/email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:singleLine="true"
            android:hint="@string/email"
            />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:text="@string/Selectprofile"
        android:textColor="#ff25475a"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <RadioGroup
        android:id="@+id/ptype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/pubptype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Public"
            android:checked="true" />

        <RadioButton
            android:id="@+id/priptype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Private" />
    </RadioGroup>
</LinearLayout>


        <LinearLayout android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnGetRegId"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Sign Up"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="205dp"
                android:background="#ff3a598e"
                android:textColor="#FFF"
                android:textStyle="bold"

                />
        </LinearLayout>
</LinearLayout>
</LinearLayout>


